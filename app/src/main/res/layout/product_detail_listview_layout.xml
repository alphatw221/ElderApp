<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle">


    <TextView
        android:id="@+id/_product_detail_listview_location"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/_product_detail_listview_amount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"

        android:gravity="center"
        android:text="(數量:)"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/_product_detail_listview_location"
        app:layout_constraintTop_toTopOf="@+id/_product_detail_listview_location"
        app:layout_constraintBottom_toBottomOf="@+id/_product_detail_listview_location"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="詳細資料"
        android:textColor="#000000"
        android:textSize="14sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/_product_detail_listview_location"
        app:layout_constraintBottom_toBottomOf="@+id/_product_detail_listview_location"/>

</androidx.constraintlayout.widget.ConstraintLayout>